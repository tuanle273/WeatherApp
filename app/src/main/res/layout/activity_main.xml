<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#77b5fe">

    <TextView
        android:id="@+id/textviewStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="398dp" />

    <EditText
        android:id="@+id/edittextSearch"
        android:layout_width="274dp"
        android:layout_height="49dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="City, State"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        tools:layout_editor_absoluteX="307dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textviewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City Name"
        android:textSize="25dp"
        android:layout_marginTop="2dp"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="70dp" />

    <TextView
        android:id="@+id/textviewCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="State Name"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="120dp" />


    <TextView
        android:id="@+id/textviewTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temp"
        android:textColor="#f20"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="167dp"
        tools:layout_editor_absoluteY="345dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="163dp"
        android:layout_height="163dp"
        app:srcCompat="@mipmap/ic_launcher_round"
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="167dp"
        tools:srcCompat="@mipmap/cloud_logo" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/cloudss"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="453dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/humidity"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="453dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher_foreground"
        tools:layout_editor_absoluteX="287dp"
        tools:layout_editor_absoluteY="453dp" />


    <TextView
        android:id="@+id/textViewCloud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clouds"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="550dp" />

    <TextView
        android:id="@+id/textViewHumidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Humidity"
        tools:layout_editor_absoluteX="174dp"
        tools:layout_editor_absoluteY="551dp" />

    <TextView
        android:id="@+id/textViewWind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="311dp"
        tools:layout_editor_absoluteY="548dp" />

    <TextView

        android:id="@+id/textviewDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Updated Day"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="589dp" />

    <Button
        android:id="@+id/buttonChangeActivity"
        android:layout_width="307dp"
        android:layout_height="56dp"
        android:text="Next Day"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="645dp" />


</androidx.constraintlayout.widget.ConstraintLayout>

